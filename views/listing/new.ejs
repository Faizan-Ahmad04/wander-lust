<% layout("/layouts/boilerplate") %>
<div class="row">
  <div class="col-8 offset-2"><br>
    <h3>Create a New Listing</h3>
    <form method="POST" action="/listings" class="needs-validation" novalidate enctype="multipart/form-data">
      <div class="md-3">
        <label for="title" class="form-label">Title</label>
        <input name="listing[title]" placeholder="enter title" type="text" class="form-control" required />
        <div class="valid-feedback">
          Looks good!
        </div>
        <div id="validationServerUsernameFeedback" class="invalid-feedback">
          Please choose a title.
        </div>
      </div>
      <div class="md-3">
        <label for="description" class="form-label">Description</label>
        <textarea name="listing[description]" placeholder="enter description" class="form-control" required></textarea>
        <div class="valid-feedback">
          Looks good!
        </div>
        <div id="validationServerUsernameFeedback" class="invalid-feedback">
          Please choose a description.
        </div>
      </div>
      <div class="md-3">
        <label for="image" class="form-label">Image</label>
        <input name="listing[image]" placeholder="enter image URL/Link" type="file" class="form-control" />
      </div>
      <div class="row">
        <div class="md-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input name="listing[price]" placeholder="enter price" class="form-control" required />
          <div class="valid-feedback">
            Looks good!
          </div>
          <div id="validationServerUsernameFeedback" class="invalid-feedback">
            Please choose a price.
          </div>
        </div>
        <div class="md-3 col-md-8">
          <label for="country" class="form-label">Country</label>
          <input name="listing[countroy]" placeholder="enter country" type="text" class="form-control" required />
          <div class="valid-feedback">
            Looks good!
          </div>
          <div id="validationServerUsernameFeedback" class="invalid-feedback">
            Please choose a country.
          </div>
        </div>
      </div>
      <div class="md-3">
        <label for="location" class="form-label">Location</label>
        <input name="listing[location]" placeholder="enter location" type="text" class="form-control" required />
        <div class="valid-feedback">
          Looks good!
        </div>
        <div id="validationServerUsernameFeedback" class="invalid-feedback">
          Please choose a location.
        </div>
      </div><br>
      <button class="btn btn-dark add-btn md-3">Add</button><br>
    </form>
  </div>
</div>
<script src="/js/script.js"></script>